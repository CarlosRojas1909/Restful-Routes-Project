<% include ./partials/header %>



<div class="ui container segment text">
        <div class="ui huge header center aligned">Edit <%= editblog.title %> </div>
        
    <form class="ui form" action="/dogs/<%= editblog._id %>?_method=PUT" method="POST">
        <div class="field">
            <label>Blog Title</label>
            <input type="text" name="editblog[title]" value="<%= editblog.title %>">
        </div>
        <div class="field">
            <label>Upload Image</label>
            <input type="text" name="editblog[image]" value="<%= editblog.image %>">
        </div>
        <div class="field">
            <label>Text Area</label>
            <textarea name="editblog[body]"><%= editblog.body %></textarea>
        </div>
        <button class="ui button" type="submit">Submit</button>
    </form>
</div>


<% include ./partials/footer %>